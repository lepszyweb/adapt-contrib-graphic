{
  "$anchor": "graphic-component",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "$merge": {
    "source": {
      "$ref": "component"
    },
    "with": {
      "properties": {
        "_supportedLayout": {
          "type": "string",
          "title": "Obsługiwany układ",
          "default": "both",
          "enum": [
            "full-width",
            "half-width",
            "both"
          ],
          "_adapt": {
            "editorOnly": true
          }
        },
        "instruction": {
          "type": "string",
          "title": "Instrukcja",
          "default": "",
          "_adapt": {
            "translatable": true
          }
        },
        "_graphic": {
          "type": "object",
          "title": "Graphic",
          "default": {},
          "required": [
            "Duże",
            "Małe"
          ],
          "properties": {
            "alt": {
              "type": "string",
              "title": "Tekst alternatywny",
              "description": "Opis obrazka; wymagany, gdy ma on znaczenie, które musi być przekazane uczącemu się. W przypadku obrazów 'dekoracyjnych' należy pozostawić to pole puste",
              "default": "",
              "_adapt": {
                "translatable": true
              }
            },
            "large": {
              "type": "string",
              "isObjectId": true,
              "title": "Duże",
              "description": "Dbraz w dużym rozmiarze dla urządzeń stacjonarnych",
              "_backboneForms": {
                "type": "Asset",
                "media": "image"
              }
            },
            "small": {
              "type": "string",
              "isObjectId": true,
              "title": "Małe",
              "description": "Mały rozmiar obrazu dla urządzeń mobilnych",
              "_backboneForms": {
                "type": "Asset",
                "media": "image"
              }
            },
            "attribution": {
              "type": "string",
              "title": "Atrybucja",
              "description": "Tekst, który ma być wyświetlany jako atrybut",
              "default": "",
              "_adapt": {
                "translatable": true
              }
            }
          }
        }
      }
    }
  }
}
